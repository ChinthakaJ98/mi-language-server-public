{
  "name": "Payload",
  "type": "mediator",
  "title": "Payload Mediator",
  "canTryOut": true,
  "help": "Replaces message payload with a new payload.",
  "elements": [
    {
      "type": "attribute",
      "value": {
        "name": "mediaType",
        "displayName": "Content Type",
        "inputType": "combo",
        "defaultValue": "json",
        "comboValues": [
          "xml",
          "json",
          "text"
        ],
        "required": false,
        "helpTip": "Content type of the constructed payload."
      }
    },
    {
      "type": "attributeGroup",
      "value": {
        "groupName": "Payload",
        "elements": [
          {
            "type": "attribute",
            "value": {
              "name": "payload",
              "displayName": "Payload",
              "inputType": "codeTextArea",
              "defaultValue": "",
              "required": true,
              "enableCondition": [
                {
                  "useTemplateResource": false
                }
              ],
              "helpTip": "Template used to construct the payload. You can use any expression like {\"id\": \"${var.userID}\", \"content\": ${payload.user.data}}",
              "placeholder": {
                "conditionField": "mediaType",
                "values": [
                  {
                    "xml": "<inline/>"
                  },
                  {
                    "json": "{\"Inline\":\"json\"}"
                  },
                  {
                    "text": "Inline text"
                  }
                ]
              }
            }
          },
          {
            "type": "table",
            "value": {
              "name": "args",
              "displayName": "Arguments",
              "title": "Payload Factory Argument",
              "description": "Arguments to be passed to the payload factory.",
              "tableKey": "{row.number}",
              "tableValue": "argumentValue",
              "enableCondition": [
                {
                  "containArgs": true
                }
              ],
              "elements": [
                {
                  "type": "attribute",
                  "value": {
                    "name": "argumentValue",
                    "displayName": "Argument Value",
                    "inputType": "stringOrExpression",
                    "defaultValue": "",
                    "required": false,
                    "helpTip": ""
                  }
                },
                {
                  "type": "attribute",
                  "value": {
                    "name": "evaluator",
                    "displayName": "Evaluator",
                    "inputType": "combo",
                    "defaultValue": "xml",
                    "comboValues": [
                      "xml",
                      "json"
                    ],
                    "required": false,
                    "enableCondition": [
                      {
                        "argumentValue": {
                          "isExpression": true
                        }
                      }
                    ],
                    "helpTip": ""
                  }
                },
                {
                  "type": "attribute",
                  "value": {
                    "name": "literal",
                    "displayName": "Literal",
                    "inputType": "checkbox",
                    "defaultValue": false,
                    "required": false,
                    "helpTip": ""
                  }
                }
              ]
            }
          }
        ]
      }
    },
    {
      "type": "attributeGroup",
      "value": {
        "groupName": "Advanced configurations",
        "isCollapsed": true,
        "elements": [
          {
            "type": "attribute",
            "value": {
              "name": "templateType",
              "displayName": "Template Type",
              "inputType": "combo",
              "defaultValue": "default",
              "comboValues": [
                "default",
                "freemarker"
              ],
              "required": false,
              "helpTip": "Template type used to construct the payload."
            }
          },
          {
            "type": "attribute",
            "value": {
              "name": "useTemplateResource",
              "displayName": "Use a Template Resource",
              "inputType": "checkbox",
              "defaultValue": false,
              "required": false,
              "helpTip": ""
            }
          },
          {
            "type": "attribute",
            "value": {
              "name": "payloadKey",
              "displayName": "Resource Key",
              "inputType": "resource",
              "keyType": ["xml", "json", "txt", "ftl"],
              "required": true,
              "helpTip": "",
              "enableCondition": [
                {
                  "useTemplateResource": true
                }
              ],
              "canAddNew": true
            }
          }
        ]
      }
    },
    {
      "type": "attribute",
      "value": {
        "name": "containArgs",
        "displayName": "containArgs",
        "inputType": "checkbox",
        "defaultValue": false,
        "required": false,
        "helpTip": "",
        "hidden": true
      }
    },
    {
      "type": "attribute",
      "value": {
        "name": "description",
        "displayName": "Description",
        "inputType": "string",
        "defaultValue": "",
        "required": false,
        "helpTip": ""
      }
    }
  ]
}
