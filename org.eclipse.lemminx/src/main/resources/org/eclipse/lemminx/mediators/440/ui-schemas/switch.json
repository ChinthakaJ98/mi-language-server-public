{
  "name": "Switch",
  "type": "mediator",
  "title": "Switch Mediator",
  "help": "Routes messages based on Regex matching.",
  "elements": [
    {
      "type": "attribute",
      "value": {
        "name": "sourceXPath",
        "displayName": "Expression",
        "inputType": "expression",
        "required": true,
        "helpTip": "Expression that resolves to a string value to be compared with the case patterns."
      }
    },
    {
      "type": "table",
      "value": {
        "name": "caseBranches",
        "displayName": "Cases",
        "title": "Switch Case Branch",
        "description": "Define a case for the switch mediator.",
        "addParamText": "Add new case",
        "tableKey": "{row.number}",
        "tableValue": "caseRegex",
        "elements": [
          {
            "type": "attribute",
            "value": {
              "name": "caseRegex",
              "displayName": "Regex Pattern",
              "inputType": "string",
              "defaultValue": "",
              "required": true,
              "helpTip": "Regular expression pattern to match the evaluated expression.",
              "placeholder": ".*+"
            }
          },
          {
            "type": "attribute",
            "value": {
              "name": "index",
              "displayName": "Index",
              "inputType": "string",
              "required": false,
              "helpTip": "",
              "enableCondition": [
                {
                  "doNotShow": true
                }
              ]
            }
          }
        ]
      }
    },
    {
      "type": "attribute",
      "value": {
        "name": "description",
        "displayName": "Description",
        "inputType": "string",
        "required": false,
        "helpTip": ""
      }
    }
  ]
}
